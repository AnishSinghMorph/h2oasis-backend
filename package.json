{
  "name": "h2oasis-backend",
  "version": "1.0.0",
  "description": "Authentication backend for H2Oasis - Firebase Functions with TypeScript",
  "main": "lib/server.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node server.ts",
    "start": "node lib/server.js",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "echo \"No tests specified yet\" && exit 0",
    "test:watch": "echo \"No test watcher configured yet\"",
    "lint": "echo \"No linter configured yet\" && exit 0",
    "lint:fix": "echo \"No linter configured yet\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "prestart": "npm run build"
  },
  "keywords": [
    "firebase",
    "authentication",
    "typescript",
    "express",
    "mongodb",
    "h2oasis"
  ],
  "author": "Anish Singh",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node-fetch": "^2.6.13",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "mongoose": "^8.18.0",
    "node-fetch": "^3.3.2",
    "openai": "^5.21.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2"
  }
}
