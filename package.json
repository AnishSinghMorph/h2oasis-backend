{
  "name": "h2oasis-backend",
  "version": "1.0.0",
  "description": "Authentication backend for H2Oasis - Firebase Functions with TypeScript",
  "main": "lib/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node server.ts",
    "start": "node lib/server.js",
    "start:dev": "nodemon --watch src --ext ts,js,json --exec ts-node server.ts",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --maxWorkers=2",
    "test:webhooks": "npm run build && node scripts/test-webhooks.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "prestart": "npm run build"
  },
  "keywords": [
    "firebase",
    "authentication",
    "typescript",
    "express",
    "mongodb",
    "h2oasis"
  ],
  "author": "Anish Singh",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/form-data": "^2.2.1",
    "@types/multer": "^2.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "form-data": "^4.0.4",
    "ioredis": "^5.8.1",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^5.21.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
